{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2016",
    "lib": [
      "es2016"
    ],
    "importHelpers": true,
    "pretty": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "test/fixtures"
  ]
}
