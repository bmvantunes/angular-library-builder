{
  "name": "angular-library-builder",
  "keywords": [],
  "author": "",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "description": "CLI Tool to build Angular (2+) libraries and publish them to npm",
  "main": "index.js",
  "bin": {
    "nglb": "./bin/nglb.js",
    "angular-library-builder": "./bin/nglb.js"
  },
  "scripts": {
    "test": "nyc mocha src/**/*.spec.ts --timeout 15000",
    "example": "npm run build && node bin/nglb.js --rootDir test/fixtures/scss-does-not-compile/input --outDir test/fixtures/scss-does-not-compile/output",
    "lint": "tslint src/**/*.ts",
    "build": "tsc -p tsconfig.json",
    "prepublish": "npm run build",
    "commit": "git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "dependencies": {
    "@angular/compiler": ">=2.3.1 <5.0.0 || >=4.0.0-beta <5.0.0",
    "@angular/compiler-cli": ">=2.3.1 <5.0.0 || >=4.0.0-beta <5.0.0",
    "@angular/core": ">=2.3.1 <5.0.0 || >=4.0.0-beta <5.0.0",
    "autoprefixer": "~6.7.6",
    "csso": "~2.3.1",
    "del": "~2.2.2",
    "gulp": "~3.9.1",
    "gulp-inline-ng2-template": "~4.0.0",
    "html-minifier": "~3.4.0",
    "node-sass": "~4.5.0",
    "postcss": "~5.2.15",
    "rxjs": "^5.1.0",
    "typescript": "~2.2.0",
    "yargs": "~7.0.1",
    "zone.js": "^0.7.2"
  },
  "devDependencies": {
    "@types/chai": "~3.4.35",
    "@types/del": "~2.2.32",
    "@types/gulp": "~4.0.0",
    "@types/html-minifier": "~1.1.30",
    "@types/mocha": "~2.2.39",
    "@types/node": "~7.0.5",
    "@types/node-sass": "~3.10.32",
    "@types/yargs": "~6.6.0",
    "chai": "~3.5.0",
    "chai-fs": "~1.0.0",
    "commitizen": "~2.9.6",
    "cz-conventional-changelog": "~2.0.0",
    "mocha": "~3.2.0",
    "nyc": "~10.1.2",
    "ts-node": "~2.1.0",
    "tslint": "~4.5.1",
    "tslint-config-standard": "~4.0.0",
    "semantic-release": "~6.3.2"
  },
  "engines": {
    "node": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bmvantunes/angular-library-builder.git"
  },
  "bugs": {
    "url": "https://github.com/bmvantunes/angular-library-builder/issues"
  },
  "homepage": "https://github.com/bmvantunes/angular-library-builder#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
